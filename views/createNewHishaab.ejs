<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Hishaab</title>
    <!-- Tailwind CSS Connection -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <!-- Navbar -->
    <%- include('navbar') %>

    <!-- Main Content -->
    <div class="flex justify-left items-center ml-5">
        <div class="w-1/2">
            <div class="max-w-md mx-auto">
                <h1 class="text-left text-2xl font-bold mt-10">Create New Hishaab</h1>
                <form action="/home/createdNewHishaab" method="post">
                    <!-- Hishaab Name Input -->
                    <div class="mt-4 mb-4">
                        <label for="hishaab-name" class="block text-gray-700 mb-2">Hishaab Name</label>
                        <input 
                            name = "hishaab_name"
                            id="hishaab-name"
                            class="border-2 border-gray-300 w-full rounded-md p-2 focus:border-blue-500 focus:outline-none" 
                            type="text" 
                            placeholder="Enter Hishaab Name">
                    </div>

                    <!-- Task Description Textarea -->
                    <div class="mb-4">
                        <label for="task-description" class="block text-gray-700 mb-2">Task Details</label>
                        <textarea 
                            name = "hishaab_description"
                            id="task-description"
                            class="border-2 border-gray-300 w-full rounded-md p-2 h-50 focus:border-blue-500 focus:outline-none" 
                            placeholder="Describe your task details here..."></textarea>
                    </div>

                    <!-- Create Button -->
                    <button class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition duration-200">
                        Create New Hishaab
                    </button>
                </form>    
            </div>
        </div>
    </div>
     
</body>
</html>